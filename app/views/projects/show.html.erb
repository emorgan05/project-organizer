<div class="container">
  
  <div class="col-md-8 col-md-offset-2">
    <h2 class="center"><%= @project.title %></h2>

      <% if flash.has?(:notice) %>
        <p class="flash"><b><%= flash[:notice] %></b></p>
      <% end %>

    <div>
      <p class="center"><%= @project.description %></p>
      <br><br>
      <small><b>Due Date</b></small><br>
      <%= @project.due_date.to_time.strftime('%A %e %B %Y') %>
      <br><br>
      <a href="/projects/<%= @project.id %>/edit">Edit Project</a>
      <br><br>
      <form onsubmit="return confirm('Are you sure you want to delete <%= @project.title %>?');" action="/projects/<%= @project.id %>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="delete" value="Delete Project" id="Delete Project" class="delete">
      </form>
    </div>

    <!--<script>
      function confirmDelete() {
